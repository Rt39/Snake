<Page x:Class="Snake.Views.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Snake.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Welcome">
    <Viewbox>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="贪吃蛇" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20"/>
            <StackPanel Grid.Row="1" Orientation="Vertical">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="FontFamily" Value="{StaticResource DFShaoNvW5}"/>
                    </Style>
                </StackPanel.Resources>
                <Button Name="btn_newGame" Content="新游戏"/>
                <Button Name="btn_exit" Content="退出"/>
            </StackPanel>
        </Grid>
    </Viewbox>
</Page>
